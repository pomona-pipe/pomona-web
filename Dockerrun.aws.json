{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "nuxt",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${APPLICATION_NAME}-nuxt",
      "hostname": "nuxt",
      "essential": false,
      "memory": 256
    },
    {
      "name": "redis",
      "image": "redis:alpine",
      "hostname": "redis",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "nginx:1.17",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["nuxt", "redis"],
      "memory": 64
    }
  ]
}
